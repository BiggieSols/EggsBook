<h1>Post show page</h1>

<h4><%= @post.details %></h4>
<% @post.comments.each_with_index do |comment, index| %>
  <% if index < @post.comments.length - 1 %>
    <div>
      <strong><%= comment.user.name %>:</strong>
      <%= comment.details %>
    </div>
  <% end %>
<% end %>

<form action="<%= post_comments_url(@post) %>" method="POST">
  <input type="text" name="comment[details]" id="comment_details" value="<%= @comment.details %>">
  <input type="submit" value="Comment">
</form>