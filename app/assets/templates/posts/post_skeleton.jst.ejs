<!-- user photo -->

<div class="post">
  <div class="row">
    <div class="col-xs-2">
      <a href="#/users/<%= post.get('user').id %>">
        <img src="<%= post.get('user').get('photo_urls').small %>" class="post-image">
      </a>
    </div>
    <div class="col-xs-10">
      <div class="row">
        <a href="#/users/<%= post.get('user').id %>" class="post-username">
          <%= post.get('user').get('name') %>
        </a>
        <%= post.get('details') %>
      </div>
      <div class="row">
        <img src="<%= post.get('image_urls').medium %>">
      </div>

      <div class="row like-info">
        <!-- post like/unlike button -->
        <div class="like-button" data-type="post" data-id="<%= post.id %>">
          post like button goes here
        </div>

        <!-- liking_users -->
        <div class="liking-users" data-type="post" data-id="<%= post.id %>">
          post-liking-users go here
        </div>
      </div>

      <!-- comments (include photo, name, comment, like) -->
      <div class="row">
        <div class="col-xs-10">
        <% _.each(post.get('comments').models, function(comment) { %>
          <div class="comment row" data-type="comment" data-id="<%= comment.id %>">
            comment goes here
          </div>
        <% }); %>
        </div>
      </div>

      <div class="row">
        <!-- add comment field -->
        <form class="new-comment">
          <div class="form-group">
          <input  type="text" 
          name="comment[details]" 
          id="comment_details"
          class="form-control" 
          placeholder="Write a comment...">
        </div>

          <input type="submit" value="add comment" class="submit-button">
        </form>
      </div>
    </div>
  </div>
</div>